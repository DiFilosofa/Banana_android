<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favoriteDistrict"
            style="@style/FavoriteLocationsTextView_district" />

        <TextView
            android:id="@+id/favoriteDetails"
            style="@style/FavoriteLocationsTextView_detail"
            android:visibility="gone"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/favoriteCheckbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/star_checkbox"
        android:theme="@style/BananaCheckbox" />
</RelativeLayout>