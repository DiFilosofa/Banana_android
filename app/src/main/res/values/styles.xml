<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="LoginTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NormalEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editTextHeight</item>
        <item name="android:layout_marginLeft">@dimen/editTextSideMargin</item>
        <item name="android:layout_marginRight">@dimen/editTextSideMargin</item>
        <item name="android:background">@drawable/rectangle_edit_text</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorHint">@color/hintTextGray</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuItemClicked">
        <item name="android:background">@drawable/menu_item_clicked_style</item>
    </style>

    <style name="BananaSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/switch_on</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/switch_off</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/switch_track_off</item>
    </style>
</resources>
